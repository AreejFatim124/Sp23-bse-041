<style>
        .card-form {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 800px;
            transform: translateY(0);
            transition: all 0.3s ease;
        }

        .card-form:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .form-title {
            color: var(--text-color);
            font-size: 2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
            position: relative;
            padding-bottom: 15px;
        }

        .form-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background: linear-gradient(to right, #FF7E5F, #FFB88C);
            border-radius: 2px;
        }

        .form-label {
            color: #6B4226;
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: linear-gradient(135deg, #FF7E5F 0%, #FFB88C 100%);;
            border-radius: 10px;
            padding: 12px 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #FF7E5F;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.25);
        }

        .form-control::placeholder {
            color: #a0aec0;
        }

        .btn-custom {
            background:linear-gradient(to right, #FF7E5F, #FFB88C);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            padding: 12px 25px;
            width: 100%;
            margin-top: 20px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-custom:before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                120deg,
                transparent,
                rgba(255, 255, 255, 0.3),
                transparent
            );
            transition: all 0.5s ease;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 14px rgba(0, 0, 0, 0.2);
            background:linear-gradient(to right, #FF7E5F, #FFB88C);
        }

        .btn-custom:hover:before {
            left: 100%;
        }

        .custom-file-input {
            position: relative;
            overflow: hidden;
        }

        .custom-file-input input[type=file] {
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .custom-file-input .file-label {
            border: 2px solid #e2e8f0;
            display: block;
            padding: 12px 20px;
            cursor: pointer;
            border-radius: 10px;
            width: 100%;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .custom-file-input:hover .file-label {
            border-color:#FF7E5F;
        }

        .form-check-input {
            width: 1.25em;
            height: 1.25em;
            margin-top: 0.25em;
            vertical-align: top;
            background-color: #fff;
            background-repeat: no-repeat;
            background-position: center;
            background-size: contain;
            border: 1px solid rgba(0, 0, 0, 0.25);
            appearance: none;
            transition: all 0.3s ease;
        }

        .form-check-input:checked {
            background-color: #FF7E5F;
            border-color: #FF7E5F;
        }

        .form-check-input:focus {
            border-color: #FF7E5F;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.25);
        }

        .invalid-feedback {
            color: #e53e3e;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        @keyframes formAppear {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card-form {
            animation: formAppear 0.5s ease-out;
        }
    </style>
</head>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-form">
                    <h2 class="form-title">
                        <i class="fas fa-box-open me-2"></i>Add New Product
                    </h2>
                    <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="productTitle" class="form-label">
                                <i class="fas fa-tag me-2"></i>Product Title
                            </label>
                            <input type="text" id="productTitle" name="title" class="form-control" required
                                minlength="3" maxlength="100" placeholder="Enter product name">
                            <div class="invalid-feedback">
                                Product title must be between 3 and 100 characters.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="productDescription" class="form-label">
                                <i class="fas fa-comment-dots me-2"></i>Description
                            </label>
                            <textarea id="productDescription" name="description" class="form-control" rows="4" required
                                minlength="10" maxlength="500"
                                placeholder="Provide a detailed product description"></textarea>
                            <div class="invalid-feedback">
                                Description must be between 10 and 500 characters.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="productPrice" class="form-label">
                                <span>&#x20A8;</span>.  Price
                            </label>
                            <div class="input-group">
                                <input type="number" id="productPrice" name="price" class="form-control" required
                                    min="0" step="0.01" placeholder="0.00">
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid price.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="productImage" class="form-label">
                                <i class="fas fa-image me-2"></i>Product Image
                            </label>
                            <div class="custom-file-input">
                                <input type="file" id="productImage" name="file" accept="image/*" class="form-control" required>
                                <label class="file-label" for="productImage">
                                    Choose image
                                </label>
                            </div>
                            <div class="invalid-feedback">
                                Please select a product image.
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input type="checkbox" id="featuredProduct" name="isFeatured" class="form-check-input">
                                <label class="form-check-label" for="featuredProduct">
                                    <i class="fas fa-star me-2"></i>Featured Product
                                </label>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-custom">
                                <i class="fas fa-plus me-2"></i>Add Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Show selected filename
        document.getElementById('productImage').addEventListener('change', function(e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : 'Choose image';
            var label = document.querySelector('.file-label');
            label.textContent = fileName;
        });

        // Add ripple effect to button
        const button = document.querySelector('.btn-custom');
        button.addEventListener('mouseenter', function(e) {
            const ripple = document.createElement('div');
            ripple.classList.add('ripple');
            this.appendChild(ripple);
            setTimeout(() => ripple.remove(), 1000);
        });
    </script>