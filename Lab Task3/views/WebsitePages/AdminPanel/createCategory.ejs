<style>
    body {
        min-height: 100vh;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .category-form-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 450px;
        transform: translateY(0);
        transition: all 0.3s ease;
    }

    .category-form-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .form-title {
        color: #5A3E36;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 15px;
    }

    .form-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(to right, #FF7E5F, #FFB88C);
        border-radius: 2px;
    }

    .form-label {
        color: #6B4226;
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: linear-gradient(135deg, #FF7E5F 0%, #FFB88C 100%);
        border-radius: 10px;
        padding: 12px 20px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #FF7E5F;
        box-shadow: 0 0 0 3px rgba(255, 126, 95, 0.25);
    }

    .form-control::placeholder {
        color: #B08877;
    }

    .btn-custom {
        background: linear-gradient(135deg, #FF7E5F 0%, #FFB88C 100%);
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        padding: 12px 25px;
        width: 100%;
        margin-top: 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-custom:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            120deg,
            transparent,
            rgba(255, 255, 255, 0.3),
            transparent
        );
        transition: all 0.5s ease;
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 7px 14px rgba(0, 0, 0, 0.2);
        background: linear-gradient(135deg, #FFB88C 0%, #FF7E5F 100%);
    }

    .btn-custom:hover:before {
        left: 100%;
    }

    .invalid-feedback {
        color: #D9534F;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    /* Animation for form appearance */
    @keyframes formAppear {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .category-form-container {
        animation: formAppear 0.5s ease-out;
    }

</style>


<body>
<div class="category-form-container">
    <h2 class="form-title">Create Category</h2>
    <form id="categoryForm" method="post" class="needs-validation" novalidate>
        <div class="mb-4">
            <label for="categoryName" class="form-label">Category Name</label>
            <input 
                type="text" 
                class="form-control" 
                id="categoryName" 
                name="categoryName" 
                placeholder="Enter category name" 
                required
            >
            <div class="invalid-feedback">
                Please provide a category name.
            </div>
        </div>
        <button type="submit" class="btn btn-custom">
            Create Category
        </button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Form validation
    (function() {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();

    // Add ripple effect to button
    const button = document.querySelector('.btn-custom');
    button.addEventListener('mouseenter', function(e) {
        const ripple = document.createElement('div');
        ripple.classList.add('ripple');
        this.appendChild(ripple);
        setTimeout(() => ripple.remove(), 1000);
    });
</script>